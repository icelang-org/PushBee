<Window x:Class="PushBee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PushBee"
        mc:Ignorable="d"
        Title="PushBee Toast Test" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Toast Notification Tests" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Button Content="Show Success Toast" Click="OnSuccessClick" Padding="15,10" Margin="0,5" Background="#ECFDF5" BorderBrush="#A7F3D0"/>
            <Button Content="Show Error Toast" Click="OnErrorClick" Padding="15,10" Margin="0,5" Background="#FEF2F2" BorderBrush="#FECACA"/>
            <Button Content="Show Info Toast" Click="OnInfoClick" Padding="15,10" Margin="0,5" Background="#EFF6FF" BorderBrush="#BFDBFE"/>
            <Button Content="Show Warning Toast" Click="OnWarningClick" Padding="15,10" Margin="0,5" Background="#FFFBEB" BorderBrush="#FDE68A"/>
        </StackPanel>
    </Grid>
</Window>
